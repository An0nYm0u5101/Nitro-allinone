	echo -en "\e[92m Do you wish to see a practical video on it (y/n)? \e[m "

read answer
 
 	 if [ "$answer" != "${answer#[Yy]}" ] ;then
       
       am start -a android.intent.action.VIEW -d https://youtu.be/gq7NKkNYuVA >> /dev/null 2>&1
	else
		echo
		fi
elif [[ $n == 4 || $n == 04 ]]; then

	     DIR="$HOME/Email_Bomber"
                if [ -d "$DIR" ]
	     then
	     cd $HOME
		 cd Email_Bomber
		 python emailbomber.py		 

	     else

	      echo -e "\e[34m[*] Installing Email_Bomber \e[m "
