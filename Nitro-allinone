              ls
              python2 termux-package.py
              cd $HOME
		 fi
    echo -en "\e[92m Do you wish to see a practical video on it (y/n)? \e[m "

read answer
 
 	 if [ "$answer" != "${answer#[Yy]}" ] ;then
       
       am start -a android.intent.action.VIEW -d https://youtu.be/5uFVhDACups >> /dev/null 2>&1
	else
		echo
		fi
