read -p $'\e[34m[*]\e[33m Enter Your Choice : \e[0m' n
echo
if [[ $n == 1 || $n == 01 ]]; then

	     DIR="$HOME/Termux-Package"
	        if [ -d "$DIR" ]; then
	     cd $HOME
	     cd Termux-Package
	     python termux-package.py
	     cd $HOME

	     else

	      echo -e "\e[34m[*] Installing Termux-package \e[m "
	      sleep 5
	      clear
	      cd $HOME
	      apt install git 
              apt install python 
              git clone https://github.com/Hackertrackersj/Termux-Package
              cd Termux-package
              ls
